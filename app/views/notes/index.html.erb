

<div id="wrapper">
    <% if user_signed_in? %>
    <% else %>
        <h1><span>Bookmarking</span> just got a whole lot more fun. Kinda.</h1>
    <% end %>
    <div class="notes">
        
        <% @notes.each do |note| %>
        <div class="note-wrapper">
            <div class="note-content">
                <%= image_tag note.image.url(:xlarge) %>
                <h4><%= link_to note.title, note %></h4>
                <p><%= note.description %></p>
                <p>Shared by: <span><%= note.user.username %></span></p>
            </div>
        </div>
        
        <% end %>
    </div>
</div>

